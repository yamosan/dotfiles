{
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.fontFamily": "FiraCodeNerdFontComplete-Retina",

  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,
  "explorer.compactFolders": false,

  "editor.mouseWheelZoom": true,
  "editor.minimap.enabled": false,
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": "active",
  "editor.inlineSuggest.enabled": true,
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.formatOnType": true,
  "editor.quickSuggestions": {
    "strings": true
  },

  "workbench.startupEditor": "newUntitledFile",
  // "workbench.editor.enablePreview": false,
  "workbench.iconTheme": "material-icon-theme",
  "workbench.colorTheme": "Cobalt Next",

  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 3000,
  "files.encoding": "utf8",
  "files.eol": "\n",

  "git.autofetch": true,

  "breadcrumbs.enabled": true,

  // <<< extensions >>>
  "vscodeGoogleTranslate.preferredLanguage": "Japanese",

  // "formattingToggle.affects": ["formatOnPaste", "formatOnSave", "formatOnType"],
  "formattingToggle.affects": ["formatOnPaste", "formatOnSave"],

  "cSpell.userWords": ["fuga", "hoge", "piyo", "signin", "signup"],

  "liveServer.settings.donotShowInfoMsg": true,
  "liveServer.settings.useLocalIp": true,

  "github.copilot.enable": {
    "*": true,
    "yaml": false,
    "plaintext": false,
    "markdown": false
  },

  "highlight.regexes": {
    "(\/\/.*<{3}.*>{3})": {
      "decorations": [
        {
          "backgroundColor": "#719FB0",
          "overviewRulerColor": "#719FB0",
          "color": "#ffffff",
          "fontWeight": "bold"
        }
      ]
    }
  },

  //  <<< JavaScript, TypeScript >>>
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnFileMove.enabled": "always",

  //  --- Linter and Formatter(Prettier, ESlint) ---
  // 1.63.0から可能 (参考: https://github.com/microsoft/vscode/issues/51935#issuecomment-981503076)
  "[javascript][javascriptreact][typescript][typescriptreact][html][css][scss][json][graphql]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.codeActionsOnSave": ["source.fixAll.eslint"]
  },
  "prettier.printWidth": 120,

  // <<< Python >>>
  "[python]": {
    "editor.tabSize": 4,
    "editor.insertSpaces": true
  },
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter.notebook.ipynb"
  },

  // --- Linter and Formatter(Flake8, black, mypy) ---
  "python.linting.enabled": true,
  "python.linting.lintOnSave": true,
  "python.languageServer": "Pylance",
  // # Flake8
  "python.linting.pylintEnabled": false,
  "python.linting.flake8Enabled": true,
  // # black
  "python.formatting.provider": "black",
  "python.formatting.blackArgs": [
    "--line-length",
    "119"
  ],
  // # mypy
  "python.linting.mypyEnabled": true,

  // blackとflake8の競合を解決
  "python.linting.flake8Args": [
    "--max-line-length",
    "119",
    "--ignore=E203, W503, W504"
  ]

  // --- Linter and Formatter(autopep8) ---
  // "python.linting.flake8Args": [
  //   "--max-line-length=150",
  //   "--max-complexity=20",
  //   "--ignore=W293, W504", // +などのオペレータの後で改行するとWarningになるW504もオフ
  // ],
  // "python.formatting.provider": "autopep8",
  // "python.formatting.autopep8Args": [
  //   "--aggressive", "--aggressive", // aggressiveレベルを2にする。(積極的なフォーマッティング)
  // ],
}
